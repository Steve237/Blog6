{% extends 'base.html.twig' %}

{% block title %}Figure{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        
        {{form_start(form)}}
        
            {{form_widget(form)}}

            <input type="hidden" id="widgets-counter" value="0">

            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>

        {{form_end(form)}}
    </div>    
{% endblock %}
{% block _update_figure_images_widget %}

    <p>Ajoutez une ou plusieurs images</p>

    {{form_widget(form)}}

    <div class="form-group">
        <button type="button" id="new-image" class="btn btn-primary">Ajouter une image</button>
    </div>

{% endblock %}

{% block _update_figure_images_entry_row %}
    {{form_widget(form)}}
{% endblock %}

{% block _update_figure_images_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {% if value %}
                        <img src="{{asset('img/figure/' ~ value.imageFigure)}}" class="img-fluid" alt="image">
                        {% endif %}
                        {{form_widget(form.imageFigure)}}
                        {{form_errors(form.imageFigure)}}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger">X</button>
            </div>
        </div>
    </div>
{% endblock %}


