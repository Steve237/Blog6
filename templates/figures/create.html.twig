{% extends 'base.html.twig' %}

{% block title %}Ajout figure{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="contentform">
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12 col-12">
                <h1 class="titreform">Ajouter une figure</h1>
                <div class="formstyle">
                    {{form_start(form)}}
        
                        {{form_widget(form)}}

                        <input type="hidden" id="widgets-counter" value="0">

                        <button type="submit" class="btn btn-primary">Ajouter une figure</button>

                    {{form_end(form)}}
                </div>
            </div>   
        </div>
    </div>
{% endblock %}

{% block _add_figure_images_widget %}

    <p>Ajoutez une ou plusieurs images</p>

    {{form_widget(form)}}

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">Ajouter une image</button>
    </div>

{% endblock %}

{% block _add_figure_videos_widget %}

    <p>Ajoutez une ou plusieurs images</p>

    {{form_widget(form)}}

    <div class="form-group">
        <button type="button" id="add-video" class="btn btn-primary">Ajouter une Video</button>
    </div>

{% endblock %}


{% block _add_figure_images_entry_row %}
    {{form_widget(form)}}
{% endblock %}


{% block _add_figure_videos_entry_row %}
    {{form_widget(form)}}
{% endblock %}

{% block _add_figure_images_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{form_widget(form.imageFile)}}
                        {{form_errors(form.imageFile)}}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{id}}" class="btn btn-danger">X</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block _add_figure_videos_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{form_widget(form.videoName)}}
                        {{form_errors(form.videoName)}}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" data-action="deletevideo" data-target="#block_{{id}}" class="btn btn-danger">X</button>
            </div>
        </div>
    </div>
{% endblock %}


