<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width"/>
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="{{asset('css/main.css')}}">
        {% endblock %}
    </head>
    
    <body>
        <nav class="navbar fixed-right navbar-expand-lg navbar-light bg-light d-none d-sm-block">
            <a class="navbar-brand" href="{{path("accueil")}}">Jimmy Snow</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="{{path("accueil")}}">Accueil <span class="sr-only">(current)</span></a>
                </li>
                {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path("inscription")}}">Inscription</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path("connexion")}}">Connexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path("deconnexion")}}">DÃ©connexion</a>
                    </li>
                {% endif %}
              </ul>
            </div>
        </nav>
        {% block body %}{% endblock %}
        <div class="navbar d-block d-sm-none">
            <a href="{{path("accueil")}}" class="active"><span class="mobilenav">Home</span></a>
            {% if not app.user %}
            <a href="{{path("inscription")}}"><span class="mobilenav">Inscription</span></a>
            <a href="{{path("connexion")}}"><span class="mobilenav">Connexion</span></a>
            {% else %}
            <a href="{{path("deconnexion")}}"><span class="mobilenav">Deconnexion</span></a>
            {% endif %}
        </div> 
        
        {% block javascripts %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script src="{{asset('js/images.js')}}"></script>
        <script src="{{asset('js/edit.js')}}"></script>
        <script src="{{asset('js/editvideo.js')}}"></script> 
    </body>
</html>